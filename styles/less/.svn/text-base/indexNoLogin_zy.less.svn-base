@charset "utf-8";

//头部
.el-header{
  border-radius: 0px;
  margin-bottom:0px;
    .container{
      .navbar-header{
        a{
          color: #ffffff;
          i{
            font-size: 18px;
          }
          span{
            font-size: 24px;
            font-style: italic;
          }
        }
      }
      .collapse{
        .navbar-nav{
          li{
            a{
              color: #ffffff;
              &:hover{
                color: #0980ff;
                text-decoration: underline;
              }

            }
          }
        }
      }

    }


}

//导航
.el-nav{
  margin-bottom: 0px;
  .container{
    .navbar-header{
      .navbar-brand{
        display: inline-block;
        padding-top: 22px;
        height: 80px;
      }
      .navbar-brand>img{
        width: 80px;
      }
    }

    .navbar-collapse{
      .navbar-nav{
        li{
          min-width: 80px;

          a{
            height: 80px;
            line-height: 80px;
            padding-bottom: 0px;
            padding-top: 0px;
            font-size: 18px;
            text-align: center;
            &:hover{
              color: #0a91ff;
              background-color: #e8e8e8;
            }
          }
        }
      }
    }

  }
}

//轮播
#carousel-example-generic{
  .carousel-inner{
    .item{
      img{
        width: 100%;
      }
    }
  }
}

//主体
